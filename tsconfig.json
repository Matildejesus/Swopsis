{
    "compilerOptions": {
        "target": "ES6",
        "lib": ["dom", "es6"],
        "allowJs": true,
        "jsx": "react-native",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "moduleResolution": "node",
        "noEmit": true,
        "baseUrl": "./",
        "paths": {
            "*": ["node_modules/*"]
        }
    },
    "include": ["src/**/*", "node_modules/react-native/**/*.js"],
    "extends": "expo/tsconfig.base"
}
